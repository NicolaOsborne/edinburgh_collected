<div class="container">
  <div class="row">
    <ul class="nav nav-pills">
      <li class="active"><%= link_to 'Memories', memories_path %></li>
      <li><%= link_to 'Scrapbooks', scrapbooks_path %></li>
    </ul>
    <div class="memories">
      <% @memories.each do |memory| %>
        <a class="memory thumb" data-id="<%= memory.id %>" href="<%= memory_path(memory.id) %>" title="View details" role="button">
          <div class="img">
            <%= image_tag cache_busted_url(memory, :thumb), alt: memory.title %>
          </div>
          <div class="footer">
            <p class="title"><%= memory.title %></p>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
