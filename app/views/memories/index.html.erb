<div class="container">
  <div id="grid">
    <header id="contentHeader" class="clearfix">
      <h1>Browsing all memories</h1>
      <span class="actions">
        <%= link_to 'Browse Scrapbooks', scrapbooks_path %>
      </span>
    </header>

    <div class="masonry-loading-spinner"><div class="spinner"></div></div>
    <div class="memory-container">
      <%= paginate @memories %>
      <div id="memories" class="masonry-grid">
        <% @memories.each do |memory| %>
          <%= render partial: 'memories/memory_thumb', locals: {memory: memory, link_path: memory_path(memory)} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".masonry-loading-spinner .spinner").spin();
</script>
