<a class="memory thumb masonry" data-id="<%= memory.id %>" href="<%= link_path %>" title="View details" role="button">
  <div class="img">
    <%= image_tag cache_busted_url(memory, :thumb), alt: memory.title %>
  </div>
  <div class="detail">
    <h3 class="title"><%= memory.title %></h3>
    <p><%= truncate(memory.description, :length => 50) %></p>
  </div>
</a>

