<a class="scrapbook thumb masonry" data-id="<%= scrapbook.id %>" href="<%= link_path %>" title="View details" role="button">
  <div class="padding">
    <h3 class="scrapbookTitle"><%= scrapbook.title %></h3>
    <% if scrapbook.cover_memory.present? %>
      <%= image_tag cache_busted_url(scrapbook.cover_memory, :big_thumb), alt: scrapbook.title, :class => "main" %>
      <div class="bottom-row clearfix">
        <div class="count">
           <div class="wrapper">
            <span><%= scrapbook.memories.count %></span>
            <i><%= 'memory'.pluralize(scrapbook.memories.count) %></i>
           </div>
        </div>
        <%= image_tag 'scrapbook-thumb-ph.png' %> <!-- mini thumb -->
        <%= image_tag 'scrapbook-thumb-ph.png' %> <!-- mini thumb -->
        <%= image_tag 'scrapbook-thumb-ph.png' %> <!-- mini thumb -->
      </div>

    <% else %>
      <div class="empty">
        <%= image_tag 'empty-scrapbook.png', :class => "ph" %>
        <h4>This scrapbook is empty</h4>
      </div>
    <% end %>
  </div>
</a>

