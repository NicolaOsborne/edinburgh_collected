<div class="container outerpage">
  <% if current_user.is_admin? %>
    <ul class="admin-toolbar">
      <li class="state <%= @memory.current_state %>">
        <%= state_label(@memory) %>
      </li>
      <ul class="moderation-actions">
        <%= button_for_state('unmoderate', 'unmoderated', @memory) %>
        <%= button_for_state('approve', 'approved', @memory) %>
        <%= button_for_state('reject', 'rejected', @memory, 'unsuitable') %>
        <%= button_for_state('reject', 'rejected', @memory, 'offensive') %>
        <li>
          <%= link_to "Edit", edit_admin_moderation_memory_path(@memory), class: 'btn btn-default' %>
        </li>
        <li>
          <%= link_to "Delete", admin_moderation_memory_path(@memory), class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure?'} %>
        </li>
      </ul>
    </ul>
  <% end %>

  <%= render 'memories/memory', object: @memory %>
</div>
