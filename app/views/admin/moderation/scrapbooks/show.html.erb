<% content_for :action_bar do %>
  <div class="viewingInfo">
    <%= render 'shared/buttons/list', list_button_name: 'Back to moderation', list_button_path: current_scrapbook_index_path %>
  </div>

  <div class="user-actions <%= @memories.none? ? 'no-memories' : '' %>">
    <%= render 'shared/buttons/delete', path: my_scrapbook_path(@scrapbook.id) %>
    <%= render 'shared/buttons/edit', path: edit_my_scrapbook_path(@scrapbook.id) %>

    <%= render 'shared/buttons/add_memories' %>
  </div>
<% end %>

<div id="scrapbook" class="container">
  <%= render partial: 'admin/moderation/moderation_panel',
              locals: {moderatable: @scrapbook, moderatable_name: 'scrapbook'} %>
  <%= render 'scrapbooks/scrapbook', scrapbook: @scrapbook, memories: @memories %>
</div>
