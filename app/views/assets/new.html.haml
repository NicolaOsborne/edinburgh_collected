.col-xs-1
.col-xs-10
  .jumbotron
    =form_for @asset, html: {id: "add-asset", class: "form-horizontal", role: "form"} do |f|
      -if @asset.errors.any?
        #error_explanation
          %h2 Please correct the following ...
          %ul
            - @asset.errors.full_messages.each do |msg|
              %li= msg

      .form-group
        .col-xs-4
          = f.label :file_type, "What would you like to add?"
        .col-xs-8
          = f.select :file_type, Asset.file_types, {}, {class: "form-control"}
      .form-group
        .col-xs-4
          = f.label :source, "Please select a file"
        .col-xs-8
          = f.file_field :source
      .form-group
        .col-xs-4
          = f.label :title, "What would you like to call this?"
        .col-xs-8
          = f.text_field :title, class: "form-control"
      .form-group
        .col-xs-4
          = f.label :date, "When does this date from?"
        .col-xs-8
          = f.date_field :date, class: "form-control"
      .form-group
        .col-xs-4
          = f.label :description, "Tell us about what you have added"
        .col-xs-8
          = f.text_area :description, class: "form-control"
      .form-group
        = link_to "Cancel", assets_path, class: "btn btn-default"
        = f.submit "Save", class: "btn btn-primary"
  .col-xs-1

