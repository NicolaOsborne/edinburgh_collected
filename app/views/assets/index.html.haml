.container-fluid
  .row
    .col-xs-12.global-asset-actions
      %a#add-asset.btn.btn-primary(href="/assets/new" role="button") Add New
  .row
    .assets
      - @assets.each do |asset|
        %a.asset.thumb(data-id="#{asset.id}" href="#{asset_url(asset.id)}" title="View details" role="button")
          %div.img
            %img{src: "#{asset.thumb}", alt: asset.title}
          %div.footer
            %p.title= asset.title
