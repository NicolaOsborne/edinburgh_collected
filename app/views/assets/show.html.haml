.container
  = link_to "Back", assets_path

  .asset.full
    %h1.title= @asset.title

    %img{src: @asset.url, alt: @asset.title, title: @asset.title}

    %h2 Details

    %ul
      %li.file_type
        %strong File Type:
        =@asset.file_type
      %li.year
        %strong Year:
        = @asset.year
      %li.month
        %strong Month:
        = @asset.month
      %li.day
        %strong Day:
        = @asset.day
      %li.description
        %strong Description:
        = @asset.description
