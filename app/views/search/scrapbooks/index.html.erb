<div class="container profile scrapbooks">
  <div id="grid">
    <header id="contentHeader" class="clearfix">
      <h1>Search results</h1>

      <div class="actions clearfix">
       <div class="viewingInfo">
         <strong>Found</strong>
         <%= link_to pluralize(@results.memory_count, 'memory'), search_memories_path(query: params[:query]), class: 'button memories inactive' %>
         <span class="button scrapbooks coral"><%= pluralize(@results.scrapbook_count, 'scrapbook') %></span>
       </div>
      </div>
    </header>

    <% if @scrapbooks.empty? -%>
      <div class="no-results">
        <%= image_tag 'empty-scrapbook.png' %>
        <p>Sorry, but we couldn't find any results for "<%= @results.query %>"</p>
      </div>
    <% else -%>
      <%= render partial: 'scrapbooks/index', locals: {scrapbooks: @scrapbooks} %>
    <% end -%>
  </div>
</div>
