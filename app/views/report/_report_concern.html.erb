<div class="container">
  <header id="formHeader" class="row">
  </header>

  <div id="reportConcernForm" class="formWrapper row">
    <div id="formPanel" class="col-md-6">

      <h1 class="form-title">Report concern</h1>

      <%= form_for moderatable, url: send("report_#{moderatable_name}_path", moderatable), as: moderatable_name, html: {id: 'report-concern', class: 'form-horizontal', method: :put, role: "form"} do |form| %>
        <div class="form-group" aria-required="true">
          <div class="formRow">
            <%= form.label :moderation_reason, 'Please tell us the cause for concern', class: "control-label" %>
            <%= form.text_area :moderation_reason, class: 'form-control' %>
            <% moderatable.errors[:moderation_reason].each do |error| %>
              <span class="help-block"><%= error %></span>
            <% end -%>
          </div>
        </div>

        <div class="form-group">
          <div class="actions col-xs-sm-12">
            <%= link_to "Cancel", send("#{moderatable_name}_path", moderatable), class: "button cancel" %>
            <%= form.submit "Send report", class: "button green" %>
          </div>
        </div>
      <% end -%>
    </div>
    <div id="infoPanel" class="col-md-6">
    </div>

  </div>
</div>
