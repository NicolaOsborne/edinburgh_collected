<div id="memories" class="container profile memories">
  <%= render partial: 'shared/profile_header', locals: {requested_user: @requested_user} %>

  <div id="grid">
    <header id="contentHeader" class="clearfix">
      <h2><%= @requested_user.screen_name.possessive %> memories</h2>
      <div class="actions clearfix">
        <div class="viewingInfo">
          <strong>Browse</strong>
          <span class="button memories"><%= pluralize(@memories.total_count, 'memory') %></span>

          <%= link_to user_scrapbooks_path(user_id: @requested_user.id), class: "button scrapbooks inactive counter", id: "view_scrapbooks" do %>
            <%= pluralize(@scrapbooks_count, 'scrapbook') %>
          <% end %>
        </div>
      </div>
    </header>

    <%= render partial: 'memories/index', locals: {memories: @memories, base_memory_path: :user_memory_path, path_attrs: {user_id: @requested_user.id}} %>
  </div>
</div>
