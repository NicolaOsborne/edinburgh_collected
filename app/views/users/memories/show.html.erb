<% content_for :action_bar do %>
  <div class="viewingInfo">
    <%= render 'shared/buttons/list', list_button_name: 'More memories from this user', list_button_path: user_memories_path(@memory.user) %>
  </div>

  <div class="user-actions float-right">
    <% if logged_in? %>
      <%= render 'shared/buttons/add_to_scrapbook', memory: @memory, classes: 'full-width-mobile' %>
    <% end -%>
  </div>
<% end %>

<div class="container">
  <%= render 'memories/memory', memory: @memory %>
</div>
