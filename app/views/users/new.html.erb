<div class="container">
 <header id="formHeader" class="row">
 </header>


 <div id="signUp" class="formWrapper row">
  <div id="formPanel" class="col-md-6">

    <h1 class="form-title">Sign up for an account</h1>

    <%= simple_form_for @user,
      wrapper: :horizontal_form,
      html: {class: 'form-horizontal', role: 'form'} do |form| %>

      <%= form.error_notification %>

      <div id="user_is_group" class="form-group">
        <div class="col-sm-5">
          <%= form.label :is_group %>
        </div>
        <div class="col-sm-7">
          <%= form.collection_radio_buttons :is_group, [[false, 'An individual'], [true, 'A group']], :first, :last %>
        </div>
      </div>

      <%= form.input :first_name, input_html: {class: 'form-control'} %>
      <%= form.input :last_name, input_html: {class: 'form-control'} %>

      <%= form.input :email, input_html: {class: 'form-control'} %>
      <%= form.input :screen_name, input_html: {class: 'form-control'} %>
      <%= form.input :password, required: true, input_html: {class: 'form-control'} %>
      <%= form.input :password_confirmation, required: true, input_html: {class: 'form-control'} %>

      <div class="form-group">
        <%= form.check_box :accepted_t_and_c %>
        <label for="user_accepted_t_and_c">
          I accept the
          <a class="underlined" href="" data-toggle="modal" data-target="#t_and_c">Terms and Conditions</a>
          <abbr title="required">*</abbr>
        </label>
      </div>

      <div class="form-group">
        <div class="actions col-xs-sm-12">
          <%= form.submit "Sign Up", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div id= class="col-md-6">
    <p class="switch"><a href="/signin">Already have an account? Sign in now</a></p>

  </div>

</div>

<div class="modal fade" id="t_and_c" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Terms & Conditions</h1>
      </div>
      <div class="modal-body">
        <div id="t_and_c_content" style="height: 250px; overflow: scroll">
          <%= render partial: 'static/t_and_c_text' %>
        </div>
      </div>
      <div class="modal-footer">
        <a href="" class="btn btn-default" data-dismiss="modal">Close</a>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  var initForm = function (e) {
    $('#user_is_group input[type="radio"]').on('change', function (e) {
      var label = $('label[for="user_first_name"]');
      if ($(e.currentTarget).val() === 'true') {
        label.html('Group name <abbr title="required">*</abbr>');
        $('.user_last_name').hide()
      } else {
        label.html('First name <abbr title="required">*</abbr>');
        $('.user_last_name').show()
      }
    })
  }

  $(document).ready(initForm);
  $(document).on('page:load', initForm);
</script>
