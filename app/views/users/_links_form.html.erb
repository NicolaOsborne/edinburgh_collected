<div class="form-group">
  <h3>Links</h3>
  <%= form.fields_for :links do |link_fields| %>
    <div class="formRow">
      <fieldset>
        <%= link_fields.label :name, class: "control-label" %>
        <%= link_fields.text_field :name, class: 'form-control' %>
        <% link_fields.object.errors[:name].each do |error| -%>
          <span class="help-block"><%= error %></span>
        <% end -%>

        <%= link_fields.label :url, class: "control-label" %>
        <%= link_fields.text_field :url, class: 'form-control', autocapitalize: :none %>
        <% link_fields.object.errors[:url].each do |error| -%>
          <span class="help-block"><%= error %></span>
        <% end -%>

        <% if link_fields.object.persisted? -%>
          <div class="actions">
            <%= link_fields.link_to_remove "Delete", class: "button small red" %>
          </div>
        <% end -%>
      </fieldset>
    </div>
  <% end %>
  <%= form.link_to_add "Add another", :links, class: "button small" %>
</div>