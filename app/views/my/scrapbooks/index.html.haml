.container-fluid
  .row
    .scrapbooks
      - @scrapbooks.each do |scrapbook|
        %a.scrapbook.thumb(data-id="#{scrapbook.id}" href="#{my_scrapbook_path(scrapbook.id)}" title="View details" role="button")
          %div.img
            - if scrapbook.memories.count == 0
              %p &nbsp;
            - else
              = image_tag cache_busted_url(scrapbook.memories.first, :thumb), alt: scrapbook.title
          %div.footer
            .title= scrapbook.title
            .count= pluralize(scrapbook.memories.count, 'memory')
            .updates= "Updated #{time_ago_in_words(scrapbook.updated_at)} ago"

