<div class="container">
  <h1>Edit</h1>
  <%= form_for @scrapbook, url: my_scrapbook_path(@scrapbook), html: {class: 'form-horizontal'} do |form| %>
    <div class="form-group">
      <div class="col-sm-4">
        <%= form.label :title, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4">
        <%= form.label :description, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= form.text_area :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="actions col-xs-sm-12">
        <%= link_to "Cancel", my_scrapbook_path(@scrapbook), class: "btn btn-default" %>
        <%= form.submit "Update scrapbook", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

