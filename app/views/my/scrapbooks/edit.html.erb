<div class="container">
  <%= link_to "All my scrapbooks", my_scrapbooks_path %> |
  <% if belongs_to_user?(@scrapbook) %>
    <%= link_to "Add more memories", memories_path %> |
    <%= link_to "Show", my_scrapbook_path(@scrapbook.id) %> |
    <%= link_to "Delete", my_scrapbook_path(@scrapbook.id), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>

  <h1>Edit</h1>
  <%= form_for @scrapbook, url: my_scrapbook_path(@scrapbook), html: {class: 'form-horizontal'} do |form| %>
    <div class="form-group">
      <div class="col-sm-4">
        <%= form.label :title, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4">
        <%= form.label :description, class: 'control-label' %>
      </div>
      <div class="col-sm-8">
        <%= form.text_area :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="actions col-xs-sm-12">
        <%= link_to "Cancel", my_scrapbook_path(@scrapbook), class: "btn btn-default" %>
        <%= form.submit "Update scrapbook", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="memories">
      <% @scrapbook.scrapbook_memories.each do |scrapbook_memory| %>
        <% memory = scrapbook_memory.memory %>
        <div class="memory thumb" data-id="<%= memory.id %>">
          <div class="img">
            <img src="<%= cache_busted_url(memory, :thumb) %>" alt="<%= memory.title %>" />
          </div>
          <div class="footer">
            <p class="title"><%= memory.title %></p>
          </div>
          <%= link_to 'Delete', my_scrapbook_memory_path(scrapbook_memory), method: :delete, confirm: 'Are you sure?' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

