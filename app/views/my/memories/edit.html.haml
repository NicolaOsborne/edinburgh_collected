.container
  .col-xs-12
    =form_for @memory, url: my_memory_url(@memory.id), method: :put, html: {id: "edit-memory", class: "form-horizontal", role: "form"} do |f|

      %h2 Edit details

      %img{src: @memory.source_url, alt: @memory.title, title: @memory.title}

      = render partial: 'form_errors', object: @memory

      = render partial: 'details_form', object: @memory, locals: { form: f }
