<div class="container">
  <header id="formHeader" class="row">
  </header>

  <div id="editProfileForm" class="formWrapper row">
    <div id="formPanel" class="col-md-6">
      <h1 class="form-title">Change details</h1>

      <%= simple_form_for @user,
            url: my_profile_path,
            wrapper: :horizontal_form,
            html: {method: :put, class: 'form-horizontal', role: 'form'} do |form| %>

        <%= form.input :first_name, label: user_name_label(@user), input_html: {class: 'form-control'} %>

        <% unless @user.is_group? %>
          <%= form.input :last_name, required: true, input_html: {class: 'form-control'} %>
        <% end %>

        <%= form.input :screen_name, input_html: {class: 'form-control'} %>

        <%= form.input :email, input_html: {class: 'form-control'} %>

        <div class="form-group">
          <h2 class="form-title">Change password</h2>
          <p class="formHint">
            If you want to change your password, please fill in the fields below,
            otherwise just leave them blank.
          </p>
        </div>

        <%= form.input :password, required: true, input_html: {class: 'form-control', value: ''} %>
        <%= form.input :password_confirmation, input_html: {class: 'form-control', value: ''} %>

        <div class="form-group">
          <div class="actions">
            <%= link_to "Cancel", my_profile_path(@user), class: "button cancel" %>
            <%= form.submit "Save changes", class: "button green" %>
          </div>
        </div>
      <% end %>
    </div>
    <div id="infoPanel" class="col-md-6">
    </div>

  </div>
</div>
