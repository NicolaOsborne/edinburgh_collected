.container
  .col-xs-12
    %h1= @user.screen_name

    %p
      = user_name_label(@user)
      = @user.first_name

    - unless @user.is_group?
      %p
        Last name:
        = @user.last_name

    %p
      Email:
      = @user.email

    %p
      Group account?
      = @user.is_group?

  .actions
    = link_to 'Edit', my_profile_edit_path, class: 'btn btn-primary'
