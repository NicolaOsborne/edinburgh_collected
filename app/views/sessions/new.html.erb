<div class="container">
  <header id="formHeader" class="row">
  </header>

  <div id="signIn" class="formWrapper row">
    <div id="formPanel" class="col-md-6">
      <h1 class="form-title">Sign in</h1>

      <%= form_tag sessions_path, class: 'form-horizontal', role: 'form' do %>
        <div class="form-group">
          <div class="">
            <%= label_tag :email, nil, class: 'control-label' %>
          </div>
          <div class="">
            <%= email_field_tag :email, nil, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="">
            <%= label_tag :password, nil, class: 'control-label' %>
          </div>
          <div class="">
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="actions col-xs-sm-12">
            <%= submit_tag "Sign in", class: "button green" %>
            <%= link_to "Forgot password?", new_password_reset_path, class: "button forgot" %>
          </div>
        </div>
      <% end %>
    </div>
    <div id="extraPanel" class="col-md-6">
      <div id="signposting">
        <h3>Not a member?</h3>
        <a href="/signup " class="button">Sign up for an account</a>
      </div>
    </div>
  </div>
</div>
