<div class="container">
  <header id="formHeader" class="row">
  </header>

  <div id="password" class="formWrapper row">
    <div id="formPanel" class="col-md-6">
      <h1 class="form-title">Choose a new password</h1>

      <%= form_for @user, url: password_reset_path(@token), html: {class: 'form-horizontal reset_password', role: 'form'} do |form| %>

        <%= render partial: 'users/password_form', locals: {form: form, user: @user} %>

        <div class="form-group">
          <div class="actions col-xs-sm-12">
            <%= form.submit "Change password", class: "button green" %>
            <%= link_to "Cancel", root_path, class: "button cancel" %>
          </div>
        </div>
      <% end %>
    </div>

    <div id="extraPanel" class="col-sm-6">
    </div>
  </div>
</div>
