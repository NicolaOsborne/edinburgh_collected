 <div id="signIn" class="formWrapper row">
  <div id="formPanel" class="col-md-6">
    <h1 class="form-title">Reset password</h1>

    <%= form_tag password_resets_path, class: 'form-horizontal', role: 'form' do %>
      <div class="form-group">
        <div class="">
          <%= label_tag :email %>
        </div>
        <div class="">
          <%= email_field_tag :email, nil, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="actions">
          <%= link_to "Cancel", signin_path, class: "button navy" %>
          <%= submit_tag "Reset password", class: "button red" %>
        </div>
      </div>
    <% end %>
  </div>
