%form
  .row.required
    %label Text Test
    %input.form-control{type: "text", value: "Filled in"}
  .row.required
    %label Date Test
    %input.form-control{type: "date", value: "2014-05-04"}
  .row.required
    %label Select Test
    %select.form-control
      %option
      %option{selected: true} Hello
      %option World
  .row.required
    %label Textarea Test
    %textarea.form-control I am filled in
  .row
    %label Not Required Test
    %input.form-control{type: "text"}
  .row
    %input{type: "submit", disabled: true}
